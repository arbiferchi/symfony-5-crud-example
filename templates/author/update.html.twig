{% extends 'base.html.twig' %}
{% block title %}Hello AuthorController!{% endblock %}
{% block body %}

    <div class="container">
        <form method="post" action="{{ path('author-update', {'author':author.id}) }}">
            {# @csrf #}
            <input type="hidden" name="token" value="{{ csrf_token('action-update') }}"/>
            <div class="form-group">
                <label for="InputEmail">Email</label>
                <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" value="{{ author.email }}">
            </div>
            <div class="form-group">
                <label for="InputName">Name</label>
                <input type="text" class="form-control" id="exampleName" name="name" aria-describedby="nameHelp" value="{{ author.name }}">
            </div>
            <div class="form-group">
                <label for="InputGender">Email</label>
                <input type="text" class="form-control" id="exampleGender" name="gender" aria-describedby="genderHelp" value="{{ author.gender }}">
            </div>
            <div class="pb-3">
                <button type="submit" class="btn btn-primary float-right">Save</button>
                <a href="{{ path('author-show-all') }}" class="btn btn-outline-secondary mr-2 float-right" role="button" aria-pressed="true">back</a>
            </div>
        </form>
    </div>

{% endblock %}
